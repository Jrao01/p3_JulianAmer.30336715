<%- include("./header"); %>

  
<div class="container pb-3 mt-2">
    
  <div class="row bg-dark">
      <h1 class="title">Productos Disponibles</h1>
  </div>
  

       <div class="table-container">
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>codigo</th>
          <th>producto</th>
          <th>categoria_id</th>
          <th>existencia_actual</th>
          <th>precio</th>
          <th><a href="/agregarProducto"><img class="imgtable" src="/icon/add.png"></a></th>
      </tr>
      </thead>
      <tbody>
        <% for(let x = 0; x < p.length;x++){ %>
        <tr>
          <td><%=p[x].id%></td>
          <td><%=p[x].codigo%></td>
          <td><%=p[x].producto%></td>
          <td><%=p[x].categoria_id%></td>
          <td><%=p[x].existencia_actual%></td>
          <td><%=p[x].precio%></td>
          <td>
            <a href="/updateProducto/<%=p[x].id%>"><img class="imgtable" src="/icon/update.png"></a>
            <a href="/deleteProducto/<%=p[x].id%>"><img class="imgtable" src="/icon/delete.png"></a>
          </td>
          
        </tr>
        <% } %>
        <!-- Agrega más filas según sea necesario -->
      </tbody>
    </table>
  </div>
</div>


<%- include("./footer"); %>